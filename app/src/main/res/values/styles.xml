<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppPS4TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/PS4_BackgroundColor</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="AppXBOXTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/XBOX_BackgroundColor</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="AppScoreValueTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">60sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppPS4ButtonStyle" parent="android:Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/PS4_BackgroundColor</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="AppXBOXButtonStyle" parent="android:Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/XBOX_BackgroundColor</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>
